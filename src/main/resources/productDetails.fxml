<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.loose.fis.sre.controllers.ProductDetailsController">
   <children>
      <TextField fx:id="name" layoutX="24.0" layoutY="57.0" prefHeight="13.0" prefWidth="134.0">
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
      </TextField>
      <Label layoutX="24.0" layoutY="38.0" text="Name">
         <font>
            <Font name="Verdana" size="12.0" />
         </font>
      </Label>
      <Label layoutX="25.0" layoutY="98.0" text="Description">
         <font>
            <Font name="Verdana" size="12.0" />
         </font>
      </Label>
      <Label layoutX="26.0" layoutY="202.0" text="Quantity">
         <font>
            <Font name="Verdana" size="12.0" />
         </font>
      </Label>
      <TextField fx:id="price" layoutX="24.0" layoutY="276.0" prefHeight="25.0" prefWidth="52.0">
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
      </TextField>
      <Label layoutX="24.0" layoutY="258.0" text="Price per unit">
         <font>
            <Font name="Verdana" size="12.0" />
         </font>
      </Label>
      <TextArea fx:id="description" layoutX="25.0" layoutY="115.0" prefHeight="70.0" prefWidth="295.0">
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
      </TextArea>
      <TextField fx:id="quantity" layoutX="24.0" layoutY="219.0" prefHeight="25.0" prefWidth="52.0">
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
      </TextField>
      <Button fx:id="editProductbutton" layoutX="24.0" layoutY="339.0" mnemonicParsing="false" onAction="#handleEditAction" text="Edit product">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <font>
            <Font name="Verdana" size="13.0" />
         </font>
      </Button>
      <Button fx:id="backButton" layoutX="270.0" layoutY="339.0" mnemonicParsing="false" onAction="#handleBackAction" text="Back">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <font>
            <Font name="Verdana" size="13.0" />
         </font>
      </Button>
      <Button fx:id="removeProductButton" layoutX="132.0" layoutY="339.0" mnemonicParsing="false" onAction="#handleRemoveAction" text="Remove product">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <font>
            <Font name="Verdana" size="13.0" />
         </font>
      </Button>
      <Text fx:id="errorMessage" fill="RED" layoutX="24.0" layoutY="392.0" strokeType="OUTSIDE" strokeWidth="0.0">
         <font>
            <Font name="Verdana" size="13.0" />
         </font>
      </Text>
   </children>
</AnchorPane>
